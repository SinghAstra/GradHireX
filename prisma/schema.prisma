datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id   String @id @default(cuid())
  name String

  password   String?
  avatar     String?
  isVerified Boolean @default(false)
  role       Role    @default(USER)
